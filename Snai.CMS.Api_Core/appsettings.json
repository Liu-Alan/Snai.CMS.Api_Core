  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", //最小日志记录级别
      "Override": { //系统日志最小记录级别
        "Default": "Warning",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }, //输出到控制台
      {
        "Name": "File", //输出文件
        "Args": {
          "path": "storage/logs/log-.txt",
          "outputTemplate": "Date:{Timestamp:yyyy-MM-dd HH:mm:ss.fff} LogLevel:{Level} | Message:{Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 720
        }
      }
    ]
  },
